				if (game->fire_right  != NULL)
				{
					mlx_put_image_to_window(game->mlx_ptr, \
					game->win_ptr, game->fire_right, x * 100, y * 100);
					game->nbr_fire++;
				}
			}
			x++;
		}
		y++;
	}
}

