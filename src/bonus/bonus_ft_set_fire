#include "../include/so_long.h"

void	set_fire_left(t_vars *game)
{
	int		x;
	int		y;

	game->nbr_fire = 0;
	y = 0;
	while (y < game->win_y / 100)
	{
		x = 0;
		while (x < game->win_x / 100)
		{
			if (game->map[y][x] == 'C')
			{
				if (game->fire_left  != NULL)
				{
					mlx_put_image_to_window(game->mlx_ptr, \
					game->win_ptr, game->fire_left, x * 100, y * 100);
					game->nbr_fire++;
				}
			}
			x++;
		}
		y++;
	}
}

void	set_fire_right(t_vars *game)
{
	int		x;
	int		y;

	game->nbr_fire = 0;
	y = 0;
	while (y < game->win_y / 100)
	{
		x = 0;
		while (x < game->win_x / 100)
		{
