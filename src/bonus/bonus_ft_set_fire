	y = 0;
	while (y < game->win_y / 100)
	{
		x = 0;
		while (x < game->win_x / 100)
		{
			if (game->map[y][x] == 'C')
			{
				if (game->fire_up  != NULL)
				{
					mlx_put_image_to_window(game->mlx_ptr, \
					game->win_ptr, game->fire_up, x * 100, y * 100);
					game->nbr_fire++;
				}
			}
			x++;
		}
		y++;
	}
}
